<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flEditItemFragMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.iwantbootcamp.EditItemFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rlEditItemFragBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlFragEditHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#E4FA9A">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/ivFragSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@+id/ivFragCancel"
                app:srcCompat="@drawable/save_icon" />

            <ImageView
                android:id="@+id/ivFragCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/close_icon" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvFragEditNameBelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rlFragEditHead"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="39dp"
            android:text="@string/edit_item_below_label"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etFragEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvFragEditNameBelow"
            android:layout_alignStart="@+id/tvFragEditNameBelow"
            android:layout_below="@+id/tvFragEditNameBelow"
            android:layout_marginTop="33dp"
            android:ems="10" />
    </RelativeLayout>

</FrameLayout>
